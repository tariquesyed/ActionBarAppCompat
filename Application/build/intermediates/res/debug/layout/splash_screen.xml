<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="@drawable/splash">
    
    

    <LinearLayout
        android:id="@+id/center_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingLeft="@dimen/default_running_text_size_large" >

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/center_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/welcome_bottom_text"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_running_text_size_small" />
    </LinearLayout>
    
    
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_text_container"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="39dp" />

</RelativeLayout>
